    <div class="row">
      <div class="col-3">
        <%= render 'layouts/left_slide' %>
      </div>
      <div class="col-9">
          <%= yield %>
      </div>
     
    </div>
    <% else %>
       <%= yield %>
    <% end %>
  </div>
  </body>
</html>
